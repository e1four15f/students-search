<Window x:Class="GUI.AboutDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" 
        ResizeMode="NoResize"
        Title="Информация о БД" Height="145" Width="320">   
    <Grid>
        <StackPanel Margin="0,10">
            <Label Name="DateOfCreation" HorizontalAlignment="Center" />
            <Label Name="UsersCount" HorizontalAlignment="Center"/>
            <Label Name="SizeInMb" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
